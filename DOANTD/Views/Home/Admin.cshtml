@model IEnumerable<DOANTD.Entities.User>

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/Adminds.cshtml";
}

<h2>Admin</h2>

<div>
    <a href="@Url.Action("Create", "Students")" class="btn btn-success btn-sm">Create</a>
</div>

<br />

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No users found.</td>
            </tr>
        }
    </tbody>
</table>