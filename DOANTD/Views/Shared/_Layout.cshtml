<!doctype html>
<html class="no-js" lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Family -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Title of the site -->
    <title>Directory Landing Page</title>

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/icon" href="~/Content/assets-index-user/assets/logo/favicon.png" />

    <!-- CSS files -->
    <link rel="stylesheet" href="~/Content/assets-index-user/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/assets-index-user/assets/css/linearicons.css">
    <link rel="stylesheet" href="~/Content/assets-index-user/assets/css/animate.css">
    <link rel="stylesheet" href="~/Content/assets-index-user/assets/css/flaticon.css">
    <link rel="stylesheet" href="~/Content/assets-index-user/assets/css/slick.css">
    <link rel="stylesheet" href="~/Content/assets-index-user/assets/css/slick-theme.css">
    <link rel="stylesheet" href="~/Content/assets-index-user/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets-index-user/assets/css/bootsnav.css">
    <link rel="stylesheet" href="~/Content/assets-index-user/assets/css/style.css">
    <link rel="stylesheet" href="~/Content/assets-index-user/assets/css/responsive.css">

    <!-- HTML5 shim and Respond.js for IE8 support -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!-- Header Section -->
    <header id="header-top" class="header-top">
        <div class="container">
            <div class="header-top-left">
                <ul>
                    <li class="select-opt">
                        <select name="language" id="language">
                            <option value="default">EN</option>
                            <option value="Bangla">BN</option>
                            <option value="Arabic">AB</option>
                        </select>
                    </li>
                    <li class="select-opt">
                        <select name="currency" id="currency">
                            <option value="usd">USD</option>
                            <option value="euro">Euro</option>
                            <option value="bdt">BDT</option>
                        </select>
                    </li>
                    <li class="select-opt">
                        <a href="#"><span class="lnr lnr-magnifier"></span></a>
                    </li>
                </ul>
            </div>
            <div class="header-top-right pull-right">
                <ul>
                    <li class="header-top-contact">
                        +1 222 777 6565
                    </li>
                    @if (Session["Username"] != null)
                    {
                        <li class="header-top-contact">
                            Welcome, @Session["Username"]!
                        </li>
                        <li class="header-top-contact">
                            @Html.ActionLink("Logout", "Logout", "Auth", null, new { @class = "nav-link" })
                        </li>
                    }
                    else
                    {
                        <li class="header-top-contact">
                            @Html.ActionLink("Login", "Login", "Auth", null, new { @class = "nav-link" })
                        </li>
                        <li class="header-top-contact">
                            @Html.ActionLink("Register", "Register", "Auth", null, new { @class = "nav-link" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </header><!--/.header-top-->

    <!-- Main Content -->
    <div class="container">
        @RenderBody() <!-- This is where the view content will be rendered -->
    </div>

    <!-- Footer Section -->
    <footer id="footer" class="footer">
        <div class="container">
            <div class="footer-menu">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="index.html">list<span>race</span></a>
                        </div>
                    </div>
                    <div class="col-sm-9">
                        <ul class="footer-menu-item">
                            <li class="scroll"><a href="#works">How it Works</a></li>
                            <li class="scroll"><a href="#explore">Explore</a></li>
                            <li class="scroll"><a href="#reviews">Review</a></li>
                            <li class="scroll"><a href="#blog">Blog</a></li>
                            <li class="scroll"><a href="#contact">Contact</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="hm-footer-copyright">
                <div class="row">
                    <div class="col-sm-5">
                        <p>&copy; copyright. Designed and Developed by <a href="https://www.themesine.com/">themesine</a></p>
                    </div>
                    <div class="col-sm-7">
                        <div class="footer-social">
                            <span><i class="fa fa-phone"> +1 (222) 777 8888</i></span>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                            <a href="#"><i class="fa fa-google-plus"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>