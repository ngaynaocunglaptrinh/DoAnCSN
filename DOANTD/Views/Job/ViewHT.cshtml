
@{
    ViewBag.Title = "ViewHT";
    Layout = "~/Views/Shared/Adminds.cshtml";
}

<h2>ViewHT</h2>

@model IEnumerable<DOANTD.Entities.Job>

<h2>Danh Sách Công Việc</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tiêu Đề</th>
            <th>Công Ty</th>
            <th>Địa Điểm</th>
            <th>Khoảng Lương</th>
            <th>Loại</th>
            <th>Ngày Đăng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.Company</td>
                <td>@job.Location</td>
                <td>@job.SalaryRange</td>
                <td>@job.Type</td>
                <td>@job.DatePosted.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>