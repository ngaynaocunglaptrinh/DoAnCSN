@model IEnumerable<DOANTD.Entities.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Adminds.cshtml";
}

<h2>Index</h2>

<h2>Admin Dashboard</h2>

<div>
    <a href="@Url.Action("Create", "Admin")" class="btn btn-success btn-sm">Create</a>
</div>

<br />

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>
                        <a href="@Url.Action("Edit", "Admin", new { id = user.Id })" class="btn btn-info btn-sm">Edit</a>
                        <a href="@Url.Action("Details", "Admin", new { id = user.Id })" class="btn btn-warning btn-sm">Details</a>
                        <a href="@Url.Action("Delete", "Admin", new { id = user.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No users found.</td>
            </tr>
        }
    </tbody>
</table>